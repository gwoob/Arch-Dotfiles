#!/bin/sh

# compile kernel & install modules using all available processing units
make -$(nproc)
make -$(nproc) modules_install

# install kernel in /boot
make install

# rebuild necessary modules
emerge @module-rebuild

# 'make install' should refresh the symlink. if not uncomment.
# ln -sf /boot/vmlinuz-$(uname -r) /boot/vmlinuz
